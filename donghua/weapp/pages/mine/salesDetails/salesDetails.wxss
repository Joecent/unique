/* pages/mine/salesDetails/salesDetails.wxss */

page{
  background-color: white;
}
.container_top {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  background-color: white;
  font-size: 26rpx;
  font-weight:bold;
  border-bottom: 1rpx solid #D5D4D4;
}
.container_top_content{
width: 50%;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
}

.container_item{
  padding: 0 24rpx;

  display: flex;
  flex-direction: column;
 border-top: 1px solid #D5D4D4;
 font-size: 26rpx;
 justify-content: center;
}
.container_item_content{
    height: 106rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.container_line{
  height: 1rpx;
  width: 100%;
  background-color: #D5D4D4;
}
.none {
  margin-top: 50rpx;
}
.none_image {
  width: 100%;
  text-align: center;
}
.none_image image{
  width: 316rpx;
  height: 310rpx;
}
.tips {
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  color: #484848;
}

.looked{
  padding: 10rpx;
  color: #ffffff;
  border-radius: 20rpx;
  margin-left: 5rpx;
}

.bg {
  display: none;
  position: fixed;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
 
.classshow {
  display: none;
  position: fixed;
  height: 550rpx;
  width: 600rpx;
top: 200rpx;
  left: 75rpx;
  background-color: white;
  z-index: 1002;
  overflow: auto;
  border-radius: 30rpx;
}
.classshow_content{
display: flex;
flex-direction: column;
 width: 600rpx;
}
.classshow_content_text{
  padding: 30rpx;
  display: flex;
width: 540rpx;
   word-break: break-all;
   margin-top: 20rpx;
   font-size: 30rpx;
}
.classshow_content_top{
  margin-top: 30rpx;
  width:600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}