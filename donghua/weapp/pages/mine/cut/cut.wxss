/* pages/mine/cut/cut.wxss */

page{
  background-color: #f6f6f6;
  height: 100%
}

.swiper-box{
 height: 90%;
}

swiper-item{
overflow: auto;
-webkit-overflow-scrolling:touch;
}


.swiper-tab{
  /* margin-top: 150rpx; */
  background-color: white;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.swiper-tab-list{
  color: #323232;
  font-size: 30rpx;
  width: 50%;
  display: flex;
  justify-content: center;
  height: 88rpx;
  line-height: 88rpx;
}

.goods_info .goods_desc{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 30rpx 32rpx;
  background-color: white;
  position: relative;
  margin-bottom: 10rpx;
}
.goods_info .goods_desc .left{
  width: 150rpx;
  height: 154.1rpx;
}
.goods_info .goods_desc .left image{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.goods_info .goods_desc .right{
  flex: 1;
  padding-left: 32rpx;
}
.name_num{
  display: flex;
  justify-content: space-between;
}
.goods_suggest{
  font-size: 28rpx;
  overflow: hidden; 
  text-overflow:ellipsis; 
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  color: #323232;
  text-align: left;
  margin-bottom: 10rpx;
}
.spec{
  font-size: 24rpx;
  color: #545454;
  height: 40rpx;
}
.right .price_wrap{
  padding: 10rpx;
  text-align: left;
  font-size: 26rpx;
}

/* .right .price{
  color: #FF6B34;
} */

.right .underline_price{
  margin-left:16rpx;
  text-decoration:line-through;
  color: #AAAAAA;
}
.goods_info .goods_desc .people_num{
  font-size: 26rpx;
  color: #545454;
  padding: 10rpx 0;
}
.cut_success{
  font-size: 26rpx;
  padding: 10rpx 0;
}
.bottom{
  display: flex;
  justify-content: space-between;
}
.none{
  margin-top: 180rpx;
}
.none_image{
  width: 100%;
  text-align: center;
}
.none_image image{
  width: 316rpx;
  height: 310rpx;
}
.tips{
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #484848;
}
.people-bt{
  padding: 0 15rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-size: 28rpx;

}
.on{
  border-bottom-style: solid;
  border-bottom-width: 1rpx;

}