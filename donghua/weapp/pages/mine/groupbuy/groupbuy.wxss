page{
  background-color: #f6f6f6;
  height: 100%
}

.swiper-box{
 height: 90%;
}

swiper-item{
overflow: auto;
-webkit-overflow-scrolling:touch;
}

.swiper-tab{
  /* margin-top: 150rpx; */
  background-color: white;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
}
.swiper-tab-list{
  color: #323232;
  font-size: 30rpx;
  width: 50%;
  display: flex;
  justify-content: center;
  height: 88rpx;
  line-height: 88rpx;
}

.on{
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.border-bottom{
  /* width: 95rpx; */
  text-align: center;
}

.swiper-box{
  margin-top: 10rpx;
}
.useless_coupons{
  position: relative;
}
.border{
  width: 680rpx;
  margin: 0 auto;
}
.border image{
  width: 680rpx;
  height: 210rpx;
}
.coupon_info{
  position: absolute;
  top: 24rpx;
  display: flex;
  justify-content: space-between;
  left: 70rpx;
  width: 610rpx;
  color: #aaaaaa;
}

.none{
  margin-top: 180rpx;
}
.none_image{
  width: 100%;
  text-align: center;
}
.none_image image{
  width: 316rpx;
  height: 310rpx;
}
.tips{
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #484848;
}

.groups{
  background-color: white;
  /* height: 380rpx; */
  margin-bottom: 10rpx;
  padding: 30rpx 40rpx;
}
.title{
  display: flex;
  justify-content: space-between;
}
.group_type{
  font-size: 30rpx;
  color: #323232;
}
.group_time{
  font-size: 20rpx;
  color: #aaaaaa;
}
.group_statu{
  font-size: 30rpx;
}
.goods_info{
  background-color: #f0f0f0;
  display: flex;
  height: 140rpx;
  margin-top: 25rpx;
  padding: 30rpx;
}

.goods_image image{
  width:150rpx;
  height: 154.1rpx;
}
.goods_name_price{
  margin-left: 30rpx;
}
.goods_name{
  font-size: 30rpx;
  color: #323232;
}
.goods_price_group_num{
   margin-top: 15rpx;
}
.goods_price{
  font-size: 28rpx;
}
.goods_price_group_num .group_num{
  color: #545454;
  font-size: 20rpx;
  margin-left: 10rpx;
  /* line-height: 48rpx; */
}
.bottom{
  display: flex;
  justify-content: space-between;
}
.user_images{
  display: flex;
  justify-content: flex-start;
}
.user_image image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 25rpx;
}
.options{
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
}
.togroupinfo{
  width: 120rpx;
  height: 40rpx;
  font-size: 24rpx;
  background-color: white;
  color: #323232;
  border:#323232;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
}
.toorderinfo{
  width: 180rpx;
  height: 46rpx;
  font-size: 24rpx;
  background-color: white;
  color: #323232;
  border:#323232;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 46rpx;
}

