/*时间轴*/


.listview-container {
  background: #fff;
  margin-top: 10rpx;
  padding: 30rpx 0;
}


.playlog-item {
	display: flex;
  position: relative;
}

/*时间轴*/
.playlog-item .dotline {
	width: 35px;

}

.playlog-item:nth-child(1) .dotline .line{
  background: #fff
}

.playlog-item:nth-child(1) .dotline .dot{
  background: red;
  width: 13px;
  height: 13px;
  left: 9px;
}


.playlog-item:nth-child(1) .content .course{
  color: #333
}

.playlog-item:nth-child(1) .content .chapter{
  color: #333
}


/*竖线*/
.playlog-item .dotline .line {
	width: 1px;
	height: 100%;
	background: #ccc;
	position: absolute;
	top: 0;
	left: 15px; 
}

/*圆点*/
.playlog-item .dotline .dot {
	width: 11px;
	height: 11px; 
	background: #D5D4D4;
	position: absolute; 
	/* top: 10px;  */
	left: 10px; 
	border-radius: 50%; 
  bottom: 0
}

/*时间戳*/
.playlog-item .dotline .time {
	width: 100%;
	position: absolute;
	margin-top: 30px;
	z-index: 99;
	font-size: 12px;
	color: #777;
	text-align: center;
}

/*右侧主体内容*/
.playlog-item .content {
	width: 100%;
	display: flex;
	flex-direction: column;
	/* border-bottom: 1px solid #ddd; */
  margin-left: 50rpx;
  margin-top: 80rpx;
  /* position: relative; */
}


.playlog-item .content .chapter {
	font-size: 30rpx;
	/* line-height: 68rpx; */
	color: #999;
	white-space: normal;
	padding-right: 10px;
  /* position: absolute; */
  left: 0;
  top: 16px
}


.playlog-item .content .course {
	font-size: 28rpx;
	/* line-height: 56rpx; */
	color: #999;
  margin-bottom: 20rpx;
}


.loading-indicator {
	text-align: center;
	font-size: 12px;
	margin: 10px 0;
}


.dingdan{
  text-align: center;
  color: #666;
  margin: 50rpx 0 30rpx 0;
 
}

.dingdan text{
 text-decoration:underline;
}


.none {
  font-size: 24rpx;
  color: #323232;
  text-align: center;
}
.error {
  font-size: 24rpx;
  color: #323232;
  text-align: center;
}