/* pages/mine/appointment/appointment.wxss */
page{
  background-color: #f6f6f6;
  height: 100%
}

.swiper-box{
 height: 90%;
}

swiper-item{
overflow: auto;
-webkit-overflow-scrolling:touch;
}


.inputclass{
  padding-left: 80rpx;
  border-radius: 6rpx;
  background-color: white;
  width: 510rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  font-size: 30rpx;
}
.search{
  margin-top: 140rpx;
  position: relative;
  height: 60rpx;
}
.search image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  margin-left: 100rpx;
  top: 15rpx;
  z-index: 99;
}

.swiper-tab{
  background-color: white;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #323232;
}

.swiper-tab-list{
  /* width: 50%; */
  text-align: center;
}
.on{
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}
.swiper-items{
  margin-top: 10rpx;
}

.title{
  background-color: white;
  display: flex;
  padding: 0 40rpx;
  justify-content: space-between;
  height: 88rpx;
  border-bottom: 1px solid #f6f6f6;
}
.shop_info {
  line-height: 88rpx;
  font-size: 30rpx;
  color: #323232;
}
.shopimage{
  width: 48rpx;
  height: 48rpx;
  margin-bottom: -12rpx;
  margin-right: 20rpx;
}
.toright{
  width: 18rpx;
  height: 26rpx;
  margin-left: 20rpx;
  margin-bottom: -2rpx;
}
.orderstatu{
  color: #ff4f73;
  line-height: 88rpx;
  font-size: 30rpx;
}
.goods_info{
  /* margin-top: 24rpx; */
  padding: 40rpx 40rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f6f6f6;
}
.goods_info image{
  width: 180rpx;
  height: 180rpx;
}
.num{
  color: #323232;
}
.num-name{
  margin-top: 20rpx;
}
.goods_number{
  text-align: right;
  line-height: 50rpx;
}
.fee{
  text-align: right;
  line-height:50rpx;
}
.order_time{
  text-align: right;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #aaaaaa;
  padding-top: 15rpx;
}
.money_info{
  /* line-height: 50rpx; */
  text-align: right;
  margin-top: 20rpx;
}
.bottom{
  height: 100rpx;
}

.none{
  margin-top: 180rpx;
}
.none_image{
  width: 100%;
  text-align: center;
}
.none_image image{
  width: 316rpx;
  height: 310rpx;
}
.tips{
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #484848;
}
.list{
  background-color: white;
  margin-bottom: 10rpx;
}
