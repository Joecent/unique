<!--pages/mine/orderinfo/orderinfo.wxml-->


<view class='numbes fs24'>订单编号：{{order_sn}}</view>

<view class='contens'>
  <view class='details' wx:for="{{goods}}" wx:key="this">
    <image src='{{item.goodsimg}}'></image>
    <view class='name_author'>
      <text>{{item.goodsname}}</text>
      <view class='spec_info'>{{item.key_name}}</view>
      <text class='price'>￥{{item.goodscost}}</text>
      <view class='num'>
        <text>数量：x {{item.goodsnum}}</text>
      </view>
    </view>
  </view>

  <view class='post-con'>
    <view class='post_fee fs30'>运费：
      <text>￥0</text>
    </view>
    <view class='total_fee fs30'>支付总额：
      <text>￥{{pay_money}}</text>
    </view>
    <view class='order_time fs26'>下单时间：{{order_time}}</view>
  </view>
</view>




<view class='receive_info'>
  <view class='receive_title'>收货信息：</view>
  <view class='receiver'>收货人：{{receiver}}</view>
  <view class='phone'>电话：{{phone}}</view>
  <view class='address'>
    地址：
    <!-- <image src='/image/position.png'></image> -->
    {{address}}/{{detail}}</view>
</view>