/* pages/mine/mine.wxss */

page{
  background-color: #f6f6f6;
  height: 100%
}

.swiper-box{
 height: 90%;
}

swiper-item{
overflow: auto;
-webkit-overflow-scrolling:touch;
}


.background{
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
}

.user{
  width: 124rpx;
  align-items: center;
  padding-left: 40rpx
}
.username{
  font-weight: medium;
  padding-left: 30rpx
}

.user image{
  height: 124rpx;
  width:124rpx;
  border-radius: 50%;
  border: 1px solid #999
}

.container{
  background-color: white;
  margin-bottom: 15rpx;
}
.orders{
  background-color: white;
  height: 200rpx;
}
.title{
  height: 80rpx;
  border-bottom: 1px solid #f6f6f6;
  display: flex;
  justify-content: space-between;
  padding: 0 5%;
}

.titlename{
  line-height: 80rpx;
  color: #2b2b2b;
  font-weight: medium;
}

.titlename-img {
  width: 30rpx;
  height: 30rpx;
}

.orderstatus{
  display: flex;
  height: 115rpx;
  padding-top: 20rpx;
  justify-content: space-between;
  padding: 0 5%;
}
.orderstatu{
  margin-top: 20rpx;
  width: 80rpx;
}
.orderstatu image{
  width: 48rpx;
  height: 40rpx;
  margin-left: 16rpx;
}
.statu{
  color: #484848;
  text-align: center;
}
.myservices{
  background-color: white;
  width: 90%;
  margin-left: 5%;
  padding: 50rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.myservice{
  width: 280rpx;
  text-align: center;
}
.image1{
  width: 48rpx;
  height:40rpx;
}
.image2{
  width: 44rpx;
  height:40rpx;
}
.image3{
  width: 28rpx;
  height:40rpx;
}
.image4{
  width: 40rpx;
  height:40rpx;
}


.boot{
  border-bottom: 1px solid #f0f0f0;
  color: #323232;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 5%;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.boot image{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -5rpx;
}

.service_button{
  display: inline-block;
  background-color: white;
  width: 600rpx;
  padding-left: 0;
  padding-right: 0;
  font-size: 30rpx;
  color: #323232;
  text-align: left;
  overflow: visible;
}
button::after{
  border: none;
}

.bottomMenu{
  height: 120rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background-color: white;
 box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}
.bottomMenu-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
