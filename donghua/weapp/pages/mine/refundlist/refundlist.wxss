/* pages/mine/refundlist/refundlist.wxss */
.list {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0px 5px 5px 0px rgba(188, 185, 185, 0.23);
  font-size: 26rpx;
}

.list image {
  width: 100%;
  height: 340rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.list_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
}

.list_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
  margin-top: 15rpx;
}
.list_num{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list_bottom_text {
  margin-left: 20rpx;
  font-size: 22rpx;
}

.list_btn {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list_btn_button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 34rpx;
  font-size: 22rpx;
 border: 1rpx solid #666666;
 border-radius: 10rpx;
}
.loadall {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #939393;
}