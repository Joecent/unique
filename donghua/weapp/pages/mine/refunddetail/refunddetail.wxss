}

.goodslist_text {
  margin-left: 32rpx;
}
.allcost{
  margin-top: 20rpx;
  font-size: 28rpx;
  margin-right: 0;
  color: #FF4040;
  display: flex;
  justify-content: flex-end;
}
.getinstrc {
  font-size: 28rpx;
  margin-top: 50rpx;
}

