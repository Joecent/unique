page{
  background-color: #f6f6f6;
  height: 100%
}

.swiper-box{
 height: 90%;
}

swiper-item{
overflow: auto;
-webkit-overflow-scrolling:touch;
}

.title{
  background-color: white;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
}
.title_name{
  width: 50%;
  display: flex;
  justify-content: center;
}
.name{
  font-size: 30rpx;
  color: #323232;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  width: 130rpx;
}
.on{
 border-bottom-style: solid;
 border-bottom-width: 1rpx;
}
.none{
  margin-top: 180rpx;
}
.none_image{
  width: 100%;
  text-align: center;
}
.none_image image{
  width: 316rpx;
  height: 310rpx;
}
.tips{
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #484848;
}
.goods_info{
  margin-top: 24rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
}
.goods_info image{
  width: 150rpx;
  height: 154.1rpx;
}
.goods_name{
  width: 300rpx;
  font-size: 28rpx;
  color: #323232;
  line-height: 40rpx;
  padding-top:20rpx;
}
.price_num{
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: right;
}
.price{
  color: #323232;
  text-align: right;
}
.num{
  margin-top: 20rpx;
  color: #323232;
  font-size: 28rpx;
}
.money_info{
  line-height: 60rpx;
  color: #ff6c34;
  font-size: 28rpx;
  text-align: right;
}
.handle{
  margin-top: -6rpx;
  padding: 0 40rpx;
  background-color: white;
  height: 80rpx;
  display: flex;
  justify-content: flex-end;
  position: relative;
}
.bottom{

}
.shop_info {
  line-height: 88rpx;
  font-size: 30rpx;
  color: #323232;
}
.shopimage{
  width: 48rpx;
  height: 48rpx;
  margin-bottom: -12rpx;
  margin-right: 20rpx;
}
.toright{
  width: 18rpx;
  height: 26rpx;
  margin-left: 20rpx;
  margin-bottom: -2rpx;
}
.orderstatu{
  color: #AAAAAA;
  line-height: 88rpx;
  font-size: 30rpx;
}
.list{
  background-color: white;
  margin-top: 20rpx;
}
.shop_title{
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
}
.order_sn{
  color: #484848;
  font-size: 28rpx;
  line-height: 88rpx;
}
.discard{
  height: 50rpx;
  width: 180rpx;
  background-color: white;
  border-radius: 6rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 15rpx;
  padding-left: 0;
  padding-right: 0;
}
.topay{
  height: 50rpx;
  width: 150rpx;
  background-color: white;
  border-radius: 6rpx;
  font-size: 30rpx;
