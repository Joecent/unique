/* swtich整体大小 */
.wx-switch-input{
  width: 100rpx !important;
  height: 51rpx !important;
}
/* false的样式 */
.wx-switch-input::before{
  width: 100rpx !important;
  height: 48rpx !important;
  background-color: #FF5D35 !important;
}
/* true的样式 */
.wx-switch-input::after{
  width: 57rpx !important;
  height: 48rpx !important;
}
