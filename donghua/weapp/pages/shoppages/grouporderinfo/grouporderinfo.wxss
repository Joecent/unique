.container {
  width: 100%;
  padding-bottom: 100rpx;
}

.title_name {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: #484848;
  margin-bottom: 18rpx;
}

.edit {
  font-size: 28rpx;
  float: right;
}

.details-lr {
  width: 100%;
}

.name_phone {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: #484848;
}

.name_phone text {
  margin-bottom: 14rpx;
  color: #323232;
  font-size: 28rpx;
  height: auto;
}

.locationchoose {
  background-color: white;
  padding: 20rpx 5%;
  height: auto;
}

.details {
  display: flex;
  background-color: white;
  padding: 30rpx 5%;
  margin-top: 10rpx;
  height: auto;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  /* position: relative; */
}

.details image {
  width: 150rpx;
  height:150rpx;
  display: block;
  /* float: left; */
  margin-right: 20rpx;
}

.details .name_author {
  width: 58%;
  height: auto;
  /* float: left; */
  font-size: 30rpx;
}

.details .name_author text {
  width: 100%;
  height: auto;
  /* float: left; */
  font-size: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #484848;
}

.details .number {
  /* position: absolute; */
  bottom: 20rpx;
  /* left: 158rpx; */
  width: 78%;
  height: auto;
  /* float: left; */
  font-size: 24rpx;
}

.details .number text {
  margin-right: 40rpx;
}

.details .price {
  /* position: absolute;
  top: 30rpx;
  right: 5%; */
  font-size: 32rpx;
}

.details .shopname {
  font-size: 24rpx;
  color: #c79f62;
  position: absolute;
  bottom: 20rpx;
  left: 200rpx;
}

.details .num {
  /* position:absolute;
  bottom: 30rpx;
  right:3%; */
  line-height: 60rpx;
  font-size: 12rpx;
}

.details .num .noclick {
  color: #a3a2a2;
}

.details .num text {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  float: left;
}

.details .num input {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #c79f62;
  display: block;
  float: left;
}

.coupon {
  margin-top: 10rpx;
  background-color: white;
  padding: 0 5%;
  height: 60rpx;
  position: relative;
}

.couponname {
  font-size: 28rpx;
  color: #323232;
  line-height: 60rpx;
}

.couponnum {
  line-height: 60rpx;
  margin-left: 60rpx;
}

.couponimage {
  width: 38rpx;
  height: 26rpx;
  margin-left: 8rpx;
  line-height: 60;
  position: absolute;
  top: 20rpx;
}

.toright {
  width: 14rpx;
  height: 22rpx;
  float: right;
  margin-top: 20rpx;
}

.time_logistics {
  background-color: white;
  height: 230rpx;
  padding: 10rpx 5%;
  color: #323232;
  margin-top: 14rpx;
  font-size: 28rpx;
  position: relative;
}

.time_logistics .price {
  float: right;
}

.time_logistics .express {
  float: right;
}

.time_logistics .discount {
  float: right;
}

.time_logistics view {
  margin-top: 10rpx;
}

.total {
  float: right;
  color: #2b2b2b;
  font-size: 24rpx;
  position: absolute;
  right: 5%;
  bottom: 15rpx;
}

.totalprice {
  font-size: 36rpx;
}

.message {
  background-color: white;
  padding: 20rpx 5%;
  margin-top: 14rpx;
  height: auto;
  position: relative;
  color: #2b2b2b;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}

.tomessage image {
  width: 30rpx;
  height: 30rpx;
}

.inputmessage {
  width: 600rpx;
  height: 150rpx;
  background-color: #e8e8e8;
  margin-top: 5rpx;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
}

.m_top {
  margin-top: 30rpx;
}

.pay button {
  text-align: center;
  position: fixed;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  color: white;
  width: 100%;
  left: 0;
  bottom: 0;
  border-radius: 0;
  z-index: 100;
}

.spec_info {
  color: #aaa;
  font-size: 26rpx;
  margin-top: 74rpx;
}

.message_input {
  position: fixed;
  padding: 0 40rpx;
  bottom: 800rpx;
  background-color: white;
}

.laymodal {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
}

.order_info {
  background-color: white;
  padding: 0 5%;
  color: #484848;
  margin-top: 10rpx;
}

.details-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.name_phone_input {
  display: flex;
  /* margin-top: 32rpx; *//* padding-bottom: 10rpx; */
  line-height: 1.4rem;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
  word-break: keep-all;
  padding: 20rpx 0;
}

.name_phone_input:last-child {
  border: none;
}

.market{
  text-decoration:line-through;
  color:#aaa;
  padding-left: 20rpx;
}
.tips{
  text-align: center;
  width: 100%;
  font-size: 26rpx;
  color: #939393;
  margin-top: 40rpx;
}