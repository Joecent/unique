<import src="../groupModules/groupModules.wxml" />
<view  style='padding-bottom:125rpx;'>
<block wx:for="{{datatext}}" wx:for-index="index">
      <template wx:if="{{datatext[index] == 'is_search'}}" data="{{src}}" is="is_search" />
      <template wx:elif="{{datatext[index] == 'is_slide'}}" data="{{imgUrls,autoplay,interval,duration,indicatorDots}}" is="is_slide" />
      <template wx:elif="{{datatext[index] == 'is_cash'}}" data="{{is_cash,cash_bg_img}}" is="is_cash" />
      <template wx:elif="{{datatext[index] == 'is_goods_group'}}" data="{{cates}}" is="is_goods_group" />
      <template wx:elif="{{datatext[index] == 'shop_info_isshow'}}" data="{{shop_info_isshow,logo,shopa,business,shop_address,backgroundColor}}" is="shop_info_isshow" />
      <template wx:elif="{{datatext[index] == 'is_group'}}" data="{{is_group,groupimg}}" is="is_group" />
      <template wx:elif="{{datatext[index] == 'is_bargain'}}" data="{{is_bargain,bargain_bg_img}}" is="is_bargain" />
      <template wx:elif="{{datatext[index] == 'is_hot_pust'}}" data="{{rec_goods,backgroundColor,loadall,hidPullUp}}"  is="is_hot_pust" />
      <template wx:else="{{datatext[index]}}"  />
      </block>
</view>

