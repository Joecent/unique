    <view class='time_logistics'>
      <view>商品总额
        <text class='price'>￥{{totalPrice}}</text>
      </view>

      <!-- <view>快递费用
        <text class='express'>￥{{express_fee}}</text>
      </view> -->

      <view>优惠减免
        <text class='discount'>￥{{discount}}</text>
      </view>
      <view class='total'>实际付款：
        <text class='totalprice'>￥{{totalMoney}}</text>
      </view>
    </view>


   <view class='order_info'>
      <view class='name_phone_input'>
        用户姓名：
        <input placeholder='请输入使用者姓名' name="service_name" value=''></input>
      </view>
      <view class='name_phone_input'>
        联系电话：
        <input placeholder='请输入使用者联系方式' name="service_phone"></input>
      </view>
     
     <view class='time'>
        <picker mode="date" value="{{date}}" start="" end="" bindchange="bindDateChange" class='time_choose' name="dates">
          <view class="picker">
            预约时间：
            <text class='time_choose-time'>{{date || '请选择时间'}}</text>
          </view>
          <!-- <view class='picker-img'>
          <image src='/image/goods_info/tomore_gray.png'></image>
        </view> -->
        </picker>
        <picker mode="time" value="{{time}}" bindchange="bindTimeChange" class='time_chooses' name="times">
          <view class="picker">
            {{time || '12:00'}}
          </view>
        </picker>
      </view>

      <view class='name_phone_input'>
        备注留言：
        <input placeholder='请输入需要提醒店家的话' style='width:100%' name="message"></input>
      </view>
    </view>

    <view class='pay'>
      <view class='totals'>实付：
        <text>￥{{totalMoney}}</text> </view>
      <button style='background-color:{{backgroundColor}};' form-type='submit' disabled='{{disable}}'>付款</button>
    </view>
