    <view class='details' wx:for="{{goods}}" wx:key="this">
      <view class='detail-img'>
        <image src='{{item.image}}' mode='aspectFill'></image>
      </view>
      <view class='details-lr'>
        <view class='name_author'>
          <text>{{item.name}}</text>
        </view>
        <view class='details-lr-bt'>
          <text class='price'>￥{{item.price}}</text>
          <view class='num'>
            <text>x {{item.count}}</text>
          </view>
        </view>
      </view>
    </view>

    <view class='coupon' bindtap='tocoupons'>
      <text class='couponname'>优惠券</text>
      <image src='/image/coupon.png' class='couponimage'></image>
      <text class='couponnum'>：{{cash_num}} 张可用</text>
      <image src='/image/toright.png' class='toright'></image>
    </view>

    <view class='z-price'>
      <text>共{{goods.length}}件商品</text>
      <text class='z-prices'>合计： <text>￥{{totalPrice}}</text> </text>
    </view>

