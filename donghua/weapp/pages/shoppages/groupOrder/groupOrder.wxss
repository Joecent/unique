/* pages/shoppages/groupOrder/groupOrder.wxss */

.order {
  padding: 30rpx 40rpx;
  background-color: white;
}

.title {
  display: flex;
  justify-content: space-between;
  /* margin-top: 150rpx; */
}

.group_type {
  font-size: 30rpx;
  color: #323232;
}

.group_time {
  font-size: 20rpx;
  color: #aaa;
}

.goods_info {
  background-color: #f0f0f0;
  display: flex;
  height: 140rpx;
  margin-top: 25rpx;
  padding: 30rpx;
}

.goods_image image {
  width: 150rpx;
  height: 154.1rpx;
}

.goods_name_price {
  margin-left: 30rpx;
}

.goods_name {
  font-size: 30rpx;
  color: #323232;
}

.goods_price {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
}

.goods_price .text {
  color: #545454;
  font-size: 20rpx;
  margin-left: 10rpx;
  /* line-height: 48rpx; */
}

.bottom {
  display: flex;
  justify-content: space-between;
}

.user_images {
  display: flex;
  justify-content: flex-start;
}

.user_image image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 25rpx;
}

.options {
  display: flex;
  /* justify-content: flex-end; */
  margin-top: 30rpx;
  justify-content: space-evenly;
}

.toorderinfo {
  width: 300rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: white;
  /* padding-left: 70rpx;
  padding-right: 70rpx; */
  line-height: 60rpx;
}

.receive_info {
  font-size: 28rpx;
  color: #323232;
  padding: 30rpx 40rpx;
  background-color: white;
  margin-top: 10rpx;
}

.receive_title {
  line-height: 60rpx;
}

.receiver {
  display: flex;
  margin-top: 30rpx;
}

.address {
  line-height: 60rpx;
  margin-top: 30rpx;
}

.address image {
  width: 40rpx;
  height: 50rpx;
  margin-right: 10rpx;
  margin-bottom: -12rpx;
}

.phone {
  margin-top: 30rpx;
}

.gohome {
  color: #fff;
  width: 300rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius:5px;
  text-align: center;
}
