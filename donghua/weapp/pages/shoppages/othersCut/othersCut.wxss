/* pages/shoppages/othersCut/othersCut.wxss */


.wrap {

  padding: 50rpx 40rpx;
  position: relative;
  text-align: center;
}

.goods_info {
  background-color: #fff;
  padding: 30rpx;
}

.wrap .avatar{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 2rpx;
  transform: translateX(-50%);
  background-color: #fff;
  border-radius: 50%;
}
.wrap .avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.goods_info .avatar_name {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #545454;
}

.goods_info .findding {
  font-size: 28rpx;
  color: #323232;
  padding-bottom: 20rpx;
}

.goods_info .goods_desc {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #f0f0f0;
  position: relative;
}

.goods_info .goods_desc .left{
  width: 150rpx;
  height: 154.1rpx;
}
.goods_info .goods_desc .left image{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.goods_info .goods_desc .right {
  flex: 1;
  padding: 0 32rpx;
}

.goods_info .goods_desc .right .goods_suggest {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #323232;
  text-align: left;
  margin-bottom: 30rpx;
}
.goods-price{
  text-align: left;
  color: #323232
}
.right .price_wrap{
  padding: 10rpx 0;
  text-align: left;
  font-size: 26rpx;
}
.right .price{
  color: #FF6B34;
}
.goods_info .goods_desc .people_num {
  position: absolute;
  right: 70rpx;
  bottom: 12rpx;
  font-size: 24rpx;
  color: #545454;
}

.cuted_price {
  color: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
}

.btn {
  color: #f00;
  background-color: #ffde00;
  font-size: 26rpx;
}

.time {
  line-height: 80rpx;
  font-size: 26rpx;
  color: #f0f0f0;
}

.help_list {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 30rpx;
  font-size: 26rpx;
}

.help_list .title {
  color: #fff;
  line-height: 60rpx;
  border-bottom: 1px solid #fff;
}

.help_list .tip {
  line-height: 60rpx;
  font-size: 20rpx;
  color: #ffde00;
}

.help_list .list {
  display: flex;
  padding-bottom: 20rpx;
  flex-wrap: wrap;
}

.help_list .list .list_item {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
}

.help_list .list .list_item .left {
  width: 50%;
  display: flex;
  align-items: center;
}

.help_list .list .list_item .left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.help_list .list .list_item .left .left_words {
  padding-left: 20rpx;
}

.help_list .list .list_item .left .top {
  font-size: 28rpx;
  color: #fff;
}

.help_list .list .list_item .left .bottom {
  font-size: 24rpx;
  color: #e1e1e1;
}

.help_list .list .list_item .right {
  width: 50%;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: right;
  align-items: center;
}

.help_list .list .list_item .right image {
  width: 34rpx;
  height: 64rpx;
  padding-right: 10rpx;
}

.more {
  font-size: 20rpx;
  color: #e1e1e1;
}

.explain {
  margin-top: 20rpx;
}

.explain .top {
  position: relative;
  height: 60rpx;
}

.explain .top .line_left {
  position: absolute;
  top: 20rpx;
  left: 0;
  width: 260rpx;
  border-bottom: 1px solid #fff;
}

.explain .top .line_right {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 260rpx;
  border-bottom: 1px solid #fff;
}

.explain .top .words {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 30rpx;
}

.explain .words_line {
  text-align: left;
  font-size: 28rpx;
  color: #fff;
}

.auth_button {
  position: fixed;
  left: 10%;
  bottom: 100rpx;
  background-color: #ff6b34;
  color: white;
  border-radius: 0;
  width: 80%;
}
.modalWrap{
  width: 600rpx;
  padding: 30rpx 0;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding-top: 60rpx;
}
.modal .img {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 0 5px #000;
  z-index: 300;
}

.modal .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.modal .content{
  background-color: #fff;
  text-align: center;
  padding: 70rpx 30rpx 25rpx 30rpx;
  color: #323232;
  position: relative;
}
.modal .content image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.modal .content .title{
  font-size: 24rpx;
  line-height: 50rpx;
}
.modal .content .subTitle{
  font-size: 26rpx;
}
.modal .content button{
   font-size: 26rpx;
   color: #fff;
   background-color: #BA312A;
}