/* pages/shoppages/groupbuy/groupbuy.wxss */

.banner {
  width: 100%;
  height: 770rpx;
  position: relative;
  overflow: hidden;
  
}

.goods_image {
  width: 100%;
  height: 770rpx;
  position: absolute;
}

.swiper {
  height: 770rpx;
}

.slide-image {
  width: 100%;
  height: 770rpx;
}

.goods_info {
  /* width: 90%; */
  padding: 20rpx 5%;
  background-color: white;
}

.price_info {
  padding: 15rpx 0;
  display: flex;
  justify-content: space-between;
}

.goods_info .goods_name {
  width: 90%;
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goods_info .goods_name .text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goods_info .goods_price {
  width: 70%;
  display: flex;
  align-items: center;
}

.goods_price .price {
  line-height: 50rpx;
  text-align: center;
  font-size: 40rpx;
}

.kc {
  color: #333;
}

.goods_price .realprice {
  margin: 0 24rpx;
  text-align: center;
  text-decoration: line-through;
  color: #aaa;
}

.share {
  width: 45rpx;
  height: 45rpx;
  margin-right: 38rpx;
}

.like {
  width: 45rpx;
  height: 45rpx;
}

.sold {
  color: #aaa;
  line-height: 58rpx;
  margin: 0 10rpx;
}

.deal_rule {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e6e6e6;
  border-top: 1px solid #e6e6e6;
}

.express {
  color: #999;
  justify-content: space-between;
  display: flex;
  margin: 10rpx 0;
  align-items: center;
  width: 100%;
}
.express_info {
  margin-right: 15rpx;
}
.rule_title{
  display:flex
}
.express_info image {
  width: 24rpx;
  height: 24rpx;
}

.express text {
  margin: 40rpx;
  line-height: 3;
}

.tomore image {
  width: 20rpx;
  height: 26rpx;
}

.groupBuy {
  margin-top: 10rpx;
  background-color: white;
  padding: 0 40rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  color: #323232;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #f0f0f0;
}

.show_groups {
  color: #aaa;
}

.show_groups image {
  width: 17rpx;
  height: 22rpx;
  margin-left: 8rpx;
}

.buygroups {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f0f0f0;
  overflow: hidden;
}

.groups {
  position: fixed;
  top: 30%;
  left: 10%;
  width: 80%;
  background-color: white;
  border-radius: 14rpx;
  padding: 30rpx 0;
  z-index: 1000
}

.cancel image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}

.groups_show {
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1px solid #f9f9f9;
}

.groups_togroupbuy {
  
  color: white;
  font-size: 30rpx;
  margin-left: 0;
  margin-right: 0;
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
}

.buygroups-user {
  display: flex;
  justify-content: space-between;
}

.userinfo image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}

.userinfo {
  font-size: 30rpx;
  color: #323232;
  display: flex;
}

.username {
  margin-left: 10rpx;
}

.groupbuyinfo {
  font-size: 30rpx;
  color: #323232;
  display: flex;
}

.togroupbuy {
  color: white;
  font-size: 30rpx;
  margin-left: 10rpx;
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
}

.goods_dec {
  margin-top: 10rpx;
  background-color: white;
  margin-bottom: 100rpx;
  padding-bottom: 100rpx;
}
.uinn image{
  display: block;
}
.goods_dec_title {
  font-size: 30rpx;
  color: #323232;
  height: 60rpx;
  border-bottom: 1px solid #f0f0f0;
  line-height: 60rpx;
  padding-left: 40rpx;
}

.goods_dec_words {
  background-color: #f0f0f0;
  margin-top: 18rpx;
  width: 670rpx;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 28rpx;
  color: #323232;
}

.btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 10;
  display: flex;
  border-top: 1px solid #e6e6e6;
}

.btn .ok {
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
}

.cart {
  width: 18%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: white;
  font-size: 30rpx;
  border-right: 1px solid #f0f0f0;
}

.cart_image {
  height: 60rpx;
}

.cart_image image {
  width: 50rpx;
  height: 48rpx;
}

.cart_font {
  line-height: 40rpx;
  color: #484848;
  font-size: 20rpx;
}

.carts {
  position: relative;
}

.time {
  font-size: 28rpx;
  padding: 15rpx 5% 15rpx 5%;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}

.maskLayer {
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 100%;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.choose {
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  width: 100%;
  height: 80%;
}

.specs {
  width: 100%;
  height: 100%;
  position: relative;
}

.specs_info {
  background-color: white;
  position: absolute;
  top: 100rpx;
  bottom: 0;
  left: 0;
  padding: 30rpx 0;
  width: 100%;
  color: #323232;
  font-size: 28rpx;
}

.image {
  /* width: 200rpx;
  height: 220rpx; */
  position: absolute;
  left: 40rpx;
  top: 0rpx;
  z-index: 50;
}

.image image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: white;
  margin-top: 20rpx;
}

.spec_name {
  color: #222;
  font-weight: bold;
  padding-left: 40rpx;
  margin-top: 50rpx;
}

.spec_value {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.value {
  margin-right: 20rpx;
  background-color: #e4e4e4;
  padding: 2rpx 20rpx;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
}

.price_score {
  /* display: flex; */
  padding: 0 30rpx 0 260rpx;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
}

.spec_price {
  margin-right: 30rpx;
  display: flex;
  font-size: 32rpx;
}

.spec_market_prices {
  color: #aaa;
  text-decoration: line-through;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.score {
  color: #aaa;
}

.on {
  color: white;
}

.buttons {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
}

.imform {
  border-radius: 0;
  color: white;
}

.error {
  text-align: right;
  padding: 0 20rpx;
  
}

.error image {
  width: 44rpx;
  height: 44rpx;
  /* text-align: right */
}

.blank {
  position: fixed;
  z-index: 100;
  width: 100%;
  height: 100%;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
