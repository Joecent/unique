/* pages/shoppages/cutPriceDesc/cutPriceDesc.wxss */

.banner{
  width: 100%;
  height: 770rpx;
  position: relative;
  overflow: hidden;
  
}
.goods_image{
  width: 100%;
  height: 770rpx;
  position: absolute;
}
.swiper{
  height: 770rpx;
}
.slide-image{
  width: 100%;
  height: 770rpx;
}


.goods_info{
  width: 90%;
  padding: 20rpx 5%;
  background-color: white;
  border-bottom: 1px solid #e6e6e6
}

.price_info{
  display: flex;
  justify-content: space-between;
}
.goods_info .goods_name{
  width: 90%;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  color: #323232;
}
.goods_info .goods_price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* overflow: hidden; */
}
.price_info .goods_price_words{
  font-size: 20rpx;
  color: #777777;
}

.goods-color{
  color: #333
}

.goods_price .price{
  line-height: 70rpx;
  text-align: center;
  font-size: 48rpx;
}
.goods_price .realprice{
  margin: 0 24rpx;
  text-align: center;
  font-size: 32rpx;
  text-decoration: line-through;
  color: #aaaaaa;
}
.share{
  width: 45rpx;
  height: 45rpx;
  margin-right: 38rpx;
}
.like{
  width: 45rpx;
  height: 45rpx;
}
.sold{
  font-size: 24rpx;
  color: #aaaaaa;
  display: flex;
  justify-content: space-between;
}
.deal_rule{
  display: flex;
  justify-content: space-between;
}
.express{
  font-size:25rpx;
  align-content: center;
  color: #484848;
  justify-content: flex-start;
  display:flex;
  margin-top: 10rpx;
}
.express_info{
 margin-right: 20rpx;
}
.express_info image{
  width: 24rpx;
  height: 24rpx;
}
.express text{
  margin: 40rpx;
  line-height: 3;
}
.tomore image{
  width: 20rpx;
  height: 26rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  color: #323232;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #f0f0f0;
}

.userinfo image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.userinfo{
  font-size: 30rpx;
  color: #323232;
  display: flex;
}
.username{
  margin-left: 10rpx;
}
.goods_dec{
  margin-top: 10rpx;
  background-color: white;
  margin-bottom: 100rpx;
}

.goods_dec_title{
  font-size: 30rpx;
  color: #323232;
  height: 60rpx;
  border-bottom: 1px solid #f0f0f0;
  line-height: 60rpx;
  padding-left: 40rpx;
}
.goods_dec_words{
  background-color: #f0f0f0;
  margin-top: 18rpx;
  width: 670rpx;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 28rpx;
  color: #323232;
}
.btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 10;
  display: flex;
  border-top: 1px solid #e6e6e6;
}
.btn .ok{
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
} 

.cart {
  width: 18%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: white;
  font-size: 30rpx;
  border-right: 1px solid #f0f0f0;
}

.cart_image {
  height: 60rpx;
}

.cart_image image {
  width: 50rpx;
  height: 48rpx;
}

.cart_font {
  line-height: 40rpx;
  color: #484848;
  font-size: 20rpx;
}
.carts{
  position: relative
}

.time{
  font-size: 28rpx;
  padding: 15rpx 5% 15rpx 5%;
  border-top:1px solid #e6e6e6;
  border-bottom:1px solid #e6e6e6;
  background: #fff
}

.kc{
  margin-left: 10rpx;
  color: #aaa;
}