/* pages/shoppages/singleorderinfo/singleorderinfo.wxss */

.container {
  width: 100%;
  padding-bottom: 100rpx;
}

.title_name {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: #484848;
  margin-bottom: 18rpx;
}

.edit {
  font-size: 28rpx;
  float: right;
}

.name_phone {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: #484848;
}

.name_phone text {
  margin-bottom: 14rpx;
  color: #323232;
  font-size: 28rpx;
  height: auto;
}

.locationchoose {
  background-color: white;
  padding: 20rpx 5%;
  height: auto;
}

.shops {
  padding: 15rpx 5%;
  background: #fff;
  margin-top: 2rpx;
  align-content: center;
}

/* .shops image {
  width: 40rpx;
  height: 40rpx;
  background: #c79f62;
} */

.shops text {
  font-size: 30rpx;
}

.details-con{
  margin-top: 10rpx;
}

.details {
  display: flex;
  padding: 10rpx 5%;
  background: #fff;
}

.detail-img image {
  width: 150rpx;
  height: 154.1rpx;
  display: block;
}

.details-lr {
  width: 100%;
  padding-left: 30rpx;
}

.name_author {
  font-size: 32rpx;
  padding: 10rpx 0;
}

.name_author text {
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.spec_info {
  font-size: 32rpx;
  padding-top: 10rpx;
}

.details-lr-bt {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 28rpx;
 
}

.spec{
  font-size: 22rpx;
  color: #999;
  padding-bottom: 10rpx;
  margin-top: 15rpx;
}
.spec .gk{
  padding-left: 20rpx;
}

.coupon {
  margin-top: 10rpx;
  background-color: white;
  padding: 0 5%;
  height: 60rpx;
  position: relative;
}

.couponname {
  font-size: 28rpx;
  color: #323232;
  line-height: 60rpx;
}

.couponnum {
  font-size: 28rpx;
  line-height: 60rpx;
  /* margin-left: 60rpx; */
}

.couponimage {
  width: 38rpx;
  height: 26rpx;
  margin-left: 8rpx;
  line-height: 60;
  position: absolute;
  top: 20rpx;
}

.toright {
  width: 14rpx;
  height: 22rpx;
  float: right;
  margin-top: 20rpx;
}

.time_logistics {
  background-color: white;
  height: 230rpx;
  padding: 10rpx 5%;
  color: #333;
  margin-top: 10rpx;
  font-size: 28rpx;
  position: relative;
}

.time_logistics .price {
  float: right;
}

.time_logistics .express {
  float: right;
}

.time_logistics .discount {
  float: right;
}

.time_logistics view {
  margin-top: 10rpx;
}

.total {
  float: right;
  color: #2b2b2b;
  font-size: 24rpx;
  position: absolute;
  right: 5%;
  bottom: 15rpx;
}

.totalprice {
  font-size: 36rpx;
}

.z-price {
  margin-top: 10rpx;
  padding: 0 5%;
  font-size: 30rpx;
  background-color: white;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}

.z-price .z-prices {
  padding-left: 10rpx;
}


.message {
  background-color: white;
  padding: 20rpx 5%;
  margin-top: 14rpx;
  height: auto;
  position: relative;
  color: #2b2b2b;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}

.tomessage image {
  width: 30rpx;
  height: 30rpx;
}

.inputmessage {
  width: 600rpx;
  height: 150rpx;
  background-color: #e8e8e8;
  margin-top: 5rpx;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
}

.m_top {
  margin-top: 30rpx;
}

.pay {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  align-items: center;
  background: #fff;
  border-top:1px solid #e6e6e6 ;
  z-index: 99
}

.pay button {
  text-align: center;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  color: white;
  border-radius: 0;
  z-index: 100;
  flex: 1;
    border: none
}
.pay button::after{
  border: none
}

.totals {
  flex: 2;
  padding-left: 30rpx;
  font-size: 32rpx;
}

