/* pages/shoppages/search/search.wxss */

.section {
  position: relative;
  padding: 20rpx 20rpx;
}

.section input {
  background: #fff;
  margin: 0 auto;
  height: 68rpx;
  line-height: 68rpx;
  padding-left: 80rpx;
  border-radius: 10rpx;
}

.section image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  z-index: 5;
}

/* 列表 */

.cate_goodslist-con {
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.cate_goodslist {
  background: #fff;
  overflow: hidden;
  margin: 0 0 15rpx 0;
  width: 49%;
}

.cate_goodslist-img image {
  width: 370rpx;
  height: 380rpx;
  display: block;
}

.cate_goodslist-bt {
  padding: 10rpx 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cate_goodslist-name {
  color: #333;
  padding: 10rpx 0;
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.market_price {
  color: #999;
  padding-left: 10rpx;
  text-decoration: line-through;
}
