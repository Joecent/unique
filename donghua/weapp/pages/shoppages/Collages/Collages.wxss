/* pages/shoppages/Collages/Collages.wxss */

.shops-top {
  padding: 0 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.section {
  flex: 6;
  position: relative;
  padding: 20rpx 20rpx;
}

.shops-fenlei-img image {
  width: 38rpx;
  height: 38rpx;
}

.section input {
  /* width: 95%; */
  background: #fff;
  margin: 0 auto;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 68rpx;
  padding-left: 80rpx;
  font-size: 30rpx;
  border: 1px solid #d5d4d4;
}

.section image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  z-index: 5;
}

.shops-fenlei, .shops-lb {
  flex: 1;
  font-size: 28rpx;
