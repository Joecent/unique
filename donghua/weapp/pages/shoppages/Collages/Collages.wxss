}

/* 商品 */

.shops-conten {
  width: 100%;
  background: #fff;
}

.shops-conten-top {
  padding: 26rpx 5%;
  display: flex;
  justify-content: space-between;
  /* border-bottom: 1px solid #D5D4D4; */
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
