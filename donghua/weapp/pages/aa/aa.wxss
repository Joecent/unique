  /* width: 25%; */
  height: 100%;
  background: #fff;
  text-align: center;
  /* position: fixed; */
  left: 0;
  top: 50px;
}







.cbp-spmenu text {
  color: #23283b;
  font-size: 1.9em;
  padding: 20px;
  margin: 0;
  font-weight: 300;
  background: #0d77b6;
}

.cbp-spmenu .menu-item {
  display: block;
  color: #fff;
  font-size: 30rpx;
  font-weight: 300;
}

.cbp-spmenu .menu-item:hover {
  background: #23283b;
}

.cbp-spmenu .menu-item:active {
  background: #23283b;
  color: #384053;
}

.cbp-spmenu-vertical {
  width: 200rpx;
  /* height: 100%; */
  top: 0;
  z-index: 1000;
  position: absolute
}


.cbp-spmenu-vertical .menu-item {
  border-bottom: 2px solid #404957;
  padding: 1em;
}

.cbp-spmenu-horizontal text {
  height: 100%;
  width: 20%;
  float: left;
}

.cbp-spmenu-horizontal .menu-item {
  float: left;
  width: 20%;
  padding: 0.8em;
  border-left: 1px solid #23283b;
}

.cbp-spmenu-left {
  left: -240px;
}


.cbp-spmenu-left.cbp-spmenu-open {
  left: 0px;
}

.cbp-spmenu-right.cbp-spmenu-open {
  right: 0px;
}

.cbp-spmenu-top.cbp-spmenu-open {
  top: 0px;
}

.cbp-spmenu-bottom.cbp-spmenu-open {
  bottom: 0px;
}

